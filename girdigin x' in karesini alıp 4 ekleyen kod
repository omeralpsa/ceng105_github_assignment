#include <stdio.h>

int main() {
    // Kullanıcıdan bir sayı al
    printf("Bir sayi girin: ");

    double sayi;
    // Kullanıcının girdiği sayıyı oku
    scanf("%lf", &sayi);

    // Sayının karesini hesapla
    double kare = sayi * sayi;

    // Kare değerine 4 ekle
    double sonuc = kare + 4;

    // Sonucu ekrana yazdır
    printf("Girdiginiz sayinin karesine 4 eklenmis hali: %.2f\n", sonuc);

    return 0;
}
