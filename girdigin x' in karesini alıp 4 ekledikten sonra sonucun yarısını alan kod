#include <stdio.h>

int main() {
    // Kullanıcıdan bir sayı al
    printf("Bir sayi girin: ");

    double sayi;
    // Kullanıcının girdiği sayıyı oku
    scanf("%lf", &sayi);

    // Sayının karesini hesapla
    double kare = sayi * sayi;

    // Kare değerine 4 ekle
    double sonuc1 = kare + 4;

    // Sonucu ikiye böl
    double sonuc2 = sonuc1 / 2;

    // Sonucu ekrana yazdır
    printf("Girdiginiz sayinin karesine 4 eklenmis ve sonucu ikiye bolunmus hali: %.2f\n", sonuc2);

    return 0;
}
